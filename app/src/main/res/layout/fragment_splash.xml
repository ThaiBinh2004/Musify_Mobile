<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splashFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!-- Logo cô gái -->
    <ImageView
        android:id="@+id/imgGirlHeadphone"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/default_img"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:background="@drawable/bg_gradient"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp" />

    <!-- Tên thương hiệu Musify nổi bật -->
    <TextView
        android:id="@+id/txtBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Musify"
        android:textColor="#FFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgGirlHeadphone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Dòng giới thiệu -->
    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="From the latest to the greatest hits,\nplay your favorite tracks on Musify now!"
        android:textColor="#44D7DD"
        android:textSize="30sp"
        android:gravity="center"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtBrand"
        app:layout_constraintBottom_toTopOf="@id/txtTapToStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dòng chữ Chạm để bắt đầu -->
    <TextView
        android:id="@+id/txtTapToStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to get start"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:letterSpacing="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
